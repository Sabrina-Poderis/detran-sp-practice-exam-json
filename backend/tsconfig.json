{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist",
      "rootDir": "./src", 
      "moduleResolution": "node", 
      "esModuleInterop": true,
      "strict": true,
      "target": "ES2020",
      "module": "commonjs",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@modules/*": ["modules/*"],
        "@shared/*": ["shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests"]
  }